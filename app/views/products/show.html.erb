<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1 text-center">
    <h1><%= @product.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3 bg-white">
    <p>
			<strong>Description:</strong>
		  <%= @product.description %>
		</p>
		<p>
		  <strong>Color:</strong>
		  <%= @product.color %>
		</p>
		<p>
		  <strong>Image</strong>
		  <span class="center-block"><%= image_tag(@product.image_url, class: "img-responsive my-image") %></span>
		  <strong>Image url:</strong> <%= @product.image_url %>
		</p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3 text-center bg-white">
		<%= link_to 'Edit', edit_product_path(@product) %> |
		<%= link_to 'Back', products_path %>
  </div>
</div>