<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1 text-center">
    <h1>Products</h1>
  </div>
</div>

<div class="row">
<% @products.each do |product| %>
  <div class="col-xs-12 col-md-10 col-md-offset-1 product">
    <p class="text-center"><strong><%= product.name %></strong></p>
    <p>Description: <%= product.description %></p>
    <p>Color: <%= product.color %></p>
    <p><%= image_tag(product.image_url, class: "img-responsive my-image") %></p>
    <p class="text-center"><%= link_to 'Show', product %> &#124;
    <%= link_to 'Edit', edit_product_path(product) %> &#124;
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
  <% end %>
</div>

<div class="row">
  <div class="spacer"></div>
  <div class="col-xs-12 col-md-10 col-md-offset-1 text-center">
    <%= link_to 'New Product', new_product_path %>
  </div>
</div>

